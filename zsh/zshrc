# Git Tweaks
# In Zsh, arguments are automatically appended, so no need for $argv
alias green='git checkout green'
alias master='git checkout master'
alias main='git checkout main'
alias push='git push'
alias branches='git branch -vv | rg -v "\*" | awk "{print \$1}"'

# sudo wrappers
alias please='sudo'
